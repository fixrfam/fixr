{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "daemon": false,
    "globalEnv": [
        "REDIS_PASSWORD",
        "REDIS_URL",
        "DB_URL",
        "FRONTEND_URL",
        "RESEND_KEY",
        "JWT_SECRET",
        "COOKIE_ENCRYPTION_SECRET",
        "COOKIE_DOMAIN",
        "NODE_PORT",
        "NEXT_PUBLIC_API_URL",
        "NEXT_PUBLIC_DOCS_URL",
        "NEXT_PUBLIC_API_URL",
        "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
        "CLERK_SECRET_KEY"
    ],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "env": [
                "REDIS_PASSWORD",
                "REDIS_URL",
                "DB_URL",
                "FRONTEND_URL",
                "RESEND_KEY",
                "JWT_SECRET",
                "COOKIE_ENCRYPTION_SECRET",
                "COOKIE_DOMAIN",
                "NODE_PORT",
                "NEXT_PUBLIC_API_URL",
                "NEXT_PUBLIC_DOCS_URL",
                "NEXT_PUBLIC_API_URL",
                "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
                "CLERK_SECRET_KEY"
            ]
        },
        "build:server": {
            "dependsOn": ["^build:server"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"]
        },
        "build:web": {
            "dependsOn": ["^build:web"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"]
        },
        "build:admin": {
            "dependsOn": ["^build:admin"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"]
        },
        "lint": {
            "dependsOn": ["^lint"],
            "env": ["REDIS_PASSWORD", "FOO"]
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "generate": {
            "dependsOn": ["^generate"]
        },
        "migrate": {
            "dependsOn": ["^generate"]
        },
        "studio": {
            "dependsOn": []
        },
        "dev": {
            "dependsOn": ["^migrate"],
            "cache": false,
            "persistent": true,
            "env": [
                "REDIS_PASSWORD",
                "REDIS_URL",
                "DB_URL",
                "FRONTEND_URL",
                "RESEND_KEY",
                "JWT_SECRET",
                "COOKIE_ENCRYPTION_SECRET",
                "COOKIE_DOMAIN",
                "NODE_PORT",
                "NEXT_PUBLIC_API_URL",
                "NEXT_PUBLIC_DOCS_URL",
                "NEXT_PUBLIC_API_URL",
                "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
                "CLERK_SECRET_KEY"
            ]
        },
        "start": {
            "dependsOn": []
        }
    }
}
